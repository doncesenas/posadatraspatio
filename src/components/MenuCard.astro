---
const { name, desc, price, image } = Astro.props;
---

<div
    class="border rounded-xl p-6 text-left hover:shadow-md transition bg-transparent"
>
    {
        image && (
            <img
                src={image}
                alt={name}
                class="rounded-lg mb-4 w-full object-cover"
            />
        )
    }
    <h3 class="text-xl font-semibold text-[#84BF49] mb-2">{name}</h3>
    <p class="text-[#d6bf9d] mb-4">{desc}</p>
    <span class="font-bold">{price}</span>
</div>
