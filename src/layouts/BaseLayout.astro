---
// src/layouts/BaseLayout.astro
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css";
const { title = "El Traspatio Mar & Grill" } = Astro.props;
---

<html lang="es">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>{title}</title>
    </head>

    <body class="text-gray-200 relative overflow-x-hidden">
        <div
            class="fixed top-0 left-0 w-full h-full bg-[url('/images/bck2.webp')] bg-cover bg-center -z-20"
        >
        </div>

        <div
            class="fixed top-0 left-0 w-full h-full bg-linear-to-b from-black/80 via-black/50 to-black/70 -z-10"
        >
        </div>

        <Navbar />

        <main class="relative z-0 min-h-[80vh]">
            <slot />
        </main>

        <Footer />
    </body>
</html>
