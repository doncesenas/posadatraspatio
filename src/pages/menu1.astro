---
import BaseLayout from "../layouts/BaseLayout.astro";
import MenuCard from "../components/MenuCard.astro";
import "../styles/global.css";
const entradas = [
    {
        name: "Queso fundido",
        desc: "Queso flameado con chorizo, servido con tortillas de harina.",
        price: "$140",
        image: "/images/queso.webp",
    },
    {
        name: "Guacamole con Costillas taj√≠n",
        desc: "El gucamole de la casa acompa√±ado de Costillas al taj√≠n",
        price: "$120",
        image: "/images/costillas.webp",
    },
];

const platosFuertes = [
    {
        name: "Parrillada mixta",
        desc: "Sirloin, arrachera y chorizo con guarniciones.",
        price: "$400",
        image: "/images/parrilladamixta.webp",
    },
    {
        name: "Pozole de camar√≥n",
        desc: "Pozole tradicional pero con el toque de la casa.",
        price: "$190",
        image: "/images/pozole.webp",
    },
];

const postres = [
    {
        name: "Cheescake de frutos rojos",
        desc: "Cheescake de la casa",
        price: "$90",
    },
];
---

<BaseLayout title="Paquete Premium | El Traspatio">
    <section class="relative py-16 bg-cover bg-center bg-no-repeat">
        <!-- Fondo degradado oscuro -->
        <div
            class="absolute inset-0 bg-linear-to-b from-black/70 via-black/50 to-black/70"
        >
        </div>

        <div class="relative z-10 text-center px-6">
            <h1 class="text-4xl font-bold text-[#84BF49] mb-4 drop-shadow-md">
                Paquete Premium
            </h1>
            <p class="text-[#F8E9D2] mb-10 max-w-2xl mx-auto">
                La experiencia completa que necesitas para disfrutar las
                entradas y los platos fuertes.
            </p>

            <!-- ü•ó ENTRADAS -->
            <div class="max-w-5xl mx-auto mb-16">
                <h2
                    class="text-2xl font-semibold text-[#D4AF37] mb-6 border-b border-[#D4AF37]/40 inline-block pb-2"
                >
                    Entradas (elige 1)
                </h2>

                <div class="grid md:grid-cols-2 gap-6 mt-6">
                    {
                        entradas.map((item) => (
                            <div class="border border-[#D4AF37]/40 rounded-2xl p-6 bg-black/40 hover:bg-black/60 hover:scale-105 hover:shadow-[0_0_25px_#D4AF37]/20 transition-all duration-500">
                                <MenuCard {...item} />
                            </div>
                        ))
                    }
                </div>
            </div>

            <!-- üçñ PLATOS FUERTES -->
            <div class="max-w-5xl mx-auto">
                <h2
                    class="text-2xl font-semibold text-[#D4AF37] mb-6 border-b border-[#D4AF37]/40 inline-block pb-2"
                >
                    Platos Fuertes
                </h2>

                <div class="grid md:grid-cols-3 gap-6 mt-6">
                    {
                        platosFuertes.map((item) => (
                            <div class="border border-[#D4AF37]/40 rounded-2xl p-6 bg-black/40 hover:bg-black/60 hover:scale-105 hover:shadow-[0_0_25px_#D4AF37]/20 transition-all duration-500">
                                <MenuCard {...item} />
                            </div>
                        ))
                    }
                </div>
            </div>

            <!-- üîò BOT√ìN DE RESERVACI√ìN -->
            <a
                href="/reservaciones"
                class="mt-16 inline-block bg-[#A6342A] hover:bg-[#D4AF37] text-white font-semibold px-6 py-3 rounded-lg transition-all duration-300 shadow-lg hover:shadow-[#D4AF37]/30"
            >
                Reservar este men√∫
            </a>
        </div>
    </section>
</BaseLayout>
